extends layout

block content
  if(!user)
    .ui.text.container(style='margin-top:200px')
      .ui.raised.grey.segment
        h1.grey.header Login To Your Account
        form.ui.form(method='POST',action="/login")
          .ui.field
            label Email
            input(type="email",name="email")
          .ui.field
            label Password
            input(type="password",name="pass")
          button.ui.submit.button Login
  if(user)
    div.ui.container(style='margin-top:200px')
      div.ui.tall.green.stacked.segment.center.aligned
        h3 Already Logged In as, #{user.fname}
